import golosinas.*

describe "test de chocolatin"{
	
	test "peso inicial"{
		chocolatin.pesoInicial(40)
		assert.equals(40, chocolatin.peso())
		assert.equals(100, chocolatin.peso())
	}
	
	test "mordisco"{
		chocolatin.pesoInicial(100)
		chocolatin.mordisco()
		chocolatin.mordisco()
		assert.equals(96, chocolatin.peso())
	}
}             